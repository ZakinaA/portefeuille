{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="needs-validation text-center" method="post" novalidate>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            {{ app.user.salt }}
        </div>
    {% endif %}
    <div class="container col-3" style="transform: translateY(50%);">
        <h1 class="display-1" style="color: #102770;">SuiviSIO</h1>
        <h1 class="h3 mb-3 font-weight-normal">Bienvenue</h1>

        <label for="inputEmail" class="sr-only">Nom d'utilisateur</label>
        <input type="text" value="{{ last_username }}" id="inputEmail" name="email" class="form-control" placeholder="Nom d'utilisateur" minlength="5" required autofocus>
        <div class="invalid-feedback">
            Veuillez saisir un nom d'utilisateur.
        </div>

    <label for="inputPassword" class="sr-only">Mot de passe</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" minlength="6" required>
    <div class="invalid-feedback">
        Veuillez saisir un mot de passe.
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

            <label>
                <input class="mt-3" type="checkbox" name="_remember_me"> Se souvenir
            </label>




    <div class="mb-3"></div>

    <button id="connexion" class="btn btn-outline-success btn-block" type="submit">Se connecter</button>
        <a href="/portefeuille/public/reset-password">Mot de passe oublié?</a>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <!-- Message d'activation -->
        <br>
        {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    {{ message }}
                </div>
        {% endfor %}

        <!-- Message d'erreur -->
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ message }}
            </div>
        {% endfor %}
    <hr class="featurette-divider p-3">
    <p>
        2020 SIO2 · SLAM
    </p>

    </div>
</form>
{% endblock %}
