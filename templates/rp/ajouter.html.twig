{% extends "entete.html.twig" %}
{% block content %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Réalisations professionnelles</title>
    <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <center><h1 class="display-4"><u>Nouvelle réalisation professionnelle</u></h1></center>
       <br> 
       <div class="alert alert-dark" role="alert">
			{{ form_start(form) }}
				<div class="form-row">
					<label>Libellé</label>
					{{ form_widget(form.libcourt, {'attr': {'class': 'form-control'}})}}
				</div><br>

				<div class="form-row">
					<label>Descriptif</label>
					{{ form_widget(form.descriptif, {'attr': {'class': 'form-control'}})}}
				</div><br>

				<div class="form-row">
					<label>Contexte</label>
					{{ form_widget(form.contexte, {'attr': {'class': 'form-control'}})}}
				</div><br>


					<div class="alert alert-secondary" role="alert">
						<div class="form-row">
	    					<div class="form-group col-md-4">
								<label>Localisation</label>
								{{ form_widget(form.localisation, {'attr': {'class': 'form-control'}})}}
							</div>
							<div class="form-group col-md-4">
								<label>Source</label>
								{{ form_widget(form.source, {'attr': {'class': 'form-control'}})}}
							</div><br>

							<div class="form-group col-md-4">
								<label>Cadre</label>
								{{ form_widget(form.cadre, {'attr': {'class': 'form-control'}})}}
							</div>
						</div><br>
							

						<div class="form-row">
							<div class="form-group col-md-6">
								<label>Date de début</label>
								{{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}})}}
							</div><br>

							<div class="form-group col-md-6">
								<label>Date de fin</label>
								{{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}})}}
							</div>
						</div><br>
					</div>

				<div class="form-row">
					<label>Environnement</label>
					{{ form_widget(form.environnement, {'attr': {'class': 'form-control'}})}}
				</div><br>

				<div class="form-row">
					<label>Moyens</label>
					{{ form_widget(form.moyen, {'attr': {'class': 'form-control'}})}}
				</div><br>
					{{ form_end(form) }}
				<div class="col-12">
					<center><button type="submit" class="btn btn-secondary">Ajouter</button></center>
				</div>
			</div>
		</div>
	</body>
</html>
{% endblock %}