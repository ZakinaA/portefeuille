{% extends "entete.html.twig" %}
{% block content %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Réalisations professionnelles</title>
    <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
<div class="container">
	<br><center><h1 class="display-4">Nouvelle réalisation professionnelle</h1></center><br> 
       
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #DDDDDD;">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link active" href="#"> Description </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"> Activités </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"> Reformulation </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"> Production </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"> Commentaire </a>
      </li>
    </ul>
  </div>
</nav>

			
<div class="alert alert-dark" role="alert">
	{{ form_start(form) }}

	<div class="form-row">
		<label>Identifiant étudiant</label>
		{{ form_widget(form.etudiant, {'attr': {'class': 'form-control'}})}} 
	</div><br>

	<div class="form-row">
		<label>Libellé</label>
		{{ form_widget(form.libcourt, {'attr': {'class': 'form-control'}})}}
	</div><br>

	<div class="form-row">
		<label>Descriptif</label>
		{{ form_widget(form.descriptif, {'attr': {'class': 'form-control'}})}}
	</div><br>

	<div class="form-row">
		<label>Contexte</label>
		{{ form_widget(form.contexte, {'attr': {'class': 'form-control'}})}}
	</div><br>


	<div class="alert alert-light" role="alert">
		<div class="form-row">
	    	<div class="form-group col-md-4">
				<label>Localisation</label>
				{{ form_widget(form.localisation, {'attr': {'class': 'form-control'}})}}
			</div>
			<div class="form-group col-md-4">
				<label>Source</label>
				{{ form_widget(form.source, {'attr': {'class': 'form-control'}})}}
			</div><br>

			<div class="form-group col-md-4">
				<label>Cadre</label>
				{{ form_widget(form.cadre, {'attr': {'class': 'form-control'}})}}
			</div>
		</div><br>
							

		<div class="form-row">
			<div class="form-group col-md-6">
				<label>Date de début</label>
				{{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}})}}
			</div><br>

			<div class="form-group col-md-6">
								<label>Date de fin</label>
				{{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}})}}
			</div>
		</div><br>
	</div>


	<div class="form-row">
		<label>Environnement</label>
		{{ form_widget(form.environnement, {'attr': {'class': 'form-control'}})}}
	</div><br>

	<div class="form-row">
		<label>Moyens</label>
		{{ form_widget(form.moyen, {'attr': {'class': 'form-control'}})}}
	</div><br>
	<center><a href="{{ path('rpAjouter') }}" class="btn-light"><button type="submit" class="btn btn-secondary">Enregistrer</button></a>
		{{ form_end(form) }}
	<div class="col-12">
</center>
</div>
</div>
</div>
</body>
</html>
{% endblock %}