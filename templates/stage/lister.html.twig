{% extends "entete.html.twig" %}
{% block content %}

<!DOCTYPE html>

<body>
<div class="container">
  <h1 class="display-4"><u>Tableau de suivi de stage</u></h1><br>


      <h4 align="left"><u>Suivi de stage</u></h4>
        <table class="table table-dark" id="table" data-toggle="BootstrapTable" data-height="460">
          <thead>
            <tr>
            <th scope="col">Etudiant</th>
          <th scope="col">Entreprise</th>
          <th scope="col">Tuteur</th>
            </tr>
          </thead>
          <tbody>
                {% for stage in pStages %}
            <tr>
            <td><a class="text-white" href="{{ path('StageConsulter', { 'stage_id': stage.id }) }}">{{stage.etudiant.nom}} {{stage.etudiant.prenom}}</a></td>
            
            <td>{{stage.lieu}}</td>
            <td>{{stage.coordonneestut}}</td>
            <td><a href="#">Carnet de bord</a></td>
  {% else %}
    <tr>
    <td>Aucun stage n'a été trouvé.</td>
    </tr>
  {% endfor %}
          </tbody>
        </table>
        <br>
        <br>

      



</body>

</html>

{% endblock %}

      



