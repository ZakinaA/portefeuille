{% extends "entete.html.twig" %}
 {% block content %}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <script src="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.js"></script>
  <link href="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.css" rel="stylesheet">
  </head>
  <html>

    <body>
      <br>
      <center>
      <h1>Consultation de stage</h1>
      </center>
      <hr class="featurette-divider p-1">
      <div class="container">
        <form>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Nom de l'entreprise</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.nomentreprise}} readonly="">
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">SIRET</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.siret}} readonly="">
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Directeur</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.directeur}} readonly="">
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Ville</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.ville}} readonly="">
            </div>
             <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Code Postal</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.copos}} readonly="">
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Adresse</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.adrentreprise}} readonly="">
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Téléphone</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.telentreprise}} readonly="">
            </div>
          </div>
          <center><div class="col-md-6 mb-3">
            <label for="disabledTextInput" >Mail</label>
            <input type="mail" id="disabledTextInput" class="form-control" value={{pStage.mailentreprise}} readonly="">
          </div></center>
          <hr class="featurette-divider p-2">
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Nom du tuteur</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.nomtut}}>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Téléphone du tuteur</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.teltut}} readonly="">
            </div>
          </div>
          <center><div class="col-md-6 mb-3">
            <label for="disabledTextInput" >Mail du tuteur</label>
            <input type="mail" id="disabledTextInput" class="form-control" value={{pStage.mailtut}} readonly="">
          </div></center>
          <hr class="featurette-divider p-2">
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Date de debut du stage</label>
              <input type="text" id="disabledTextInput" class="form-control" value="{{pStage.dateDebut|date('Y-m-d')}}" readonly="">
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Date de fin du stage</label>
              <input type="text" id="disabledTextInput" class="form-control" value="{{pStage.dateFin|date('Y-m-d')}}" readonly="">
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Durée</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.nbsemaine}} readonly="">
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Sujet</label>
              <input type="text" id="disabledTextInput" class="form-control" value={{pStage.sujet}} readonly="">
            </div>
          </div>
        </form>
        <hr class="featurette-divider p-2">
        <center><h2>Horaires</h2><br></center>
        <table class="table table-dark" >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Lundi</th>
              <th scope="col">Mardi</th>
              <th scope="col">Mercredi</th>
              <th scope="col">Jeudi</th>
              <th scope="col">Vendredi</th>
              <th scope="col">Samedi</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Horaires</th>
              <td></td>
              <td>{{pStage.horLun}}</td>
              <td>{{pStage.horMar}}</td>
              <td>{{pStage.horMer}}</td>
              <td>{{pStage.horJeu}}</td>
              <td>{{pStage.horVen}}</td>
              <td>{{pStage.horSam}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </body>
</html>

{% endblock %}
